<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="50dp">

    <com.android.inputmethodservice.KatsunaKeyboardView
        android:id="@+id/keyboardView"
        style="@style/BackgroundStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:keyBackground="@drawable/keybackground"
        app:keyPreviewLayout="@null"
        app:keyTextColor="@color/common_black"
        app:keyTextSize="@dimen/keyTextSize"
        app:shadowRadius="0" />

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:contentDescription="@string/close_popup_keyboard"
        android:padding="5dp"
        android:src="@drawable/close_button" />

</LinearLayout>